doctype html
html(lang='pl-PL')
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css")
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;700&family=Indie+Flower&display=swap")
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    header.header
      nav.navbar.navbar-expand-lg.navbar-dark
        .container-fluid
          a.navbar-brand(href='/') Galeria Zdjęć
          button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav')
            span.navbar-toggler-icon
          .collapse.navbar-collapse#navbarNav
            ul.navbar-nav.mr-auto
              li.nav-item
                a.nav-link(href='/users') Użytkownicy
              li.nav-item
                a.nav-link(href='/galleries') Galerie
              li.nav-item
                a.nav-link(href='/images') Zdjęcia
            ul.navbar-nav
              if user
                li.nav-item
                  span.nav-link Zalogowany jako #{user.username}
                li.nav-item
                  a.nav-link(href='/users/logout') Wyloguj
              else
                li.nav-item
                  a.nav-link(href='/users/login') Zaloguj (niezalogowany)
    
    .main-content
      .sidebar.pt-3.pb-3
        ul.nav.flex-column
          if !user
            li.nav-item
              a.nav-link(href='/users/user_add') Zarejestruj się
          else
            li.nav-item
              a.nav-link(href='/users/profile') Moje konto
            li.nav-item
              a.nav-link(href='/users/delete-account') Usuń konto
          li.nav-item
            a.nav-link(href='/galleries/gallery_add') Dodaj galerię
          if user
            li.nav-item
              a.nav-link(href='/images/image_add') Dodaj zdjęcie
      .content-area.pt-3
        block content
    
    footer.footer
      .container-fluid
        .row
          .col-12.text-center
            | &copy; #{new Date().getFullYear()} Galeria Zdjęć - Wszystkie prawa zastrzeżone
    
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js")
    block scripts